#!/bin/bash

for libscript in $(find "./sh_lib" -name "*.sh"); do
  source "$libscript"
done

function main() {
  # Dispatch to the acceptable functions
  while (( $# > 0 )); do
    case "$1" in
      buy|sell|sell_cap|sell_cap::one \
      |_donate \
      |craft|collect_mail \
      |explore \
      |feed_pigs|collect_pet_items \
      |planty|plant|harvest \
      |camp_mailbox|rapid_explore|breakfast_boosted \
      |inventory|craft_max \
      |item|item_nr_to_name \
      |cook::bone_broth \
      |fish::net::one|fish::net::all \
      ) "$1" "${@:2}"; return ;;
      *) log::err "Unknown argument | func='${FUNCNAME[0]}' arg='$1'" >&2; exit 1 ;;
    esac
  done
}
main "$@"
